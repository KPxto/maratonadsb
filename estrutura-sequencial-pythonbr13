sexo = input('Digite M ou F para sexo: ').upper()
altura = float(input('Digite sua Altura: '))
homens = (72.7 * altura) - 58
mulheres = (62 * altura) - 44.7
if sexo == 'M':
	print('Sexo masculino / Peso ideal: {:.2f}'.format(homens))
elif sexo == 'F':
	print('Sexo feminino / Peso ideal: {:.2f}'.format(mulheres))
